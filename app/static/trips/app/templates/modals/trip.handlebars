<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
        <span aria-hidden="true">&times;</span><span class="sr-only">Close</span>
      </button>
      {{#if trip.trip_id}}
      <h3 class="modal-title">Edit Trip id: {{trip.trip_headsign}}</h3>
      {{else}}
      <h3 class="modal-title">Add New Trip</h3>
      {{/if}}
    </div>

    <div class="modal-body">
      <form role="form" >
        <div class="form-group">
          <label for="trip_short_name">trip_short_name</label>
          <input class="form-control" type="text" name="trip_short_name" placeholder="trip_short_name" value="{{trip.trip_short_name}}">
        </div>
        <div class="form-group">
          <label for="service_id" class="control-label">Service</label>
            <select class="form-control select-service" id="service_id">
              <option value=""> -- </option>
              {{#each calendars}}
                <option value="{{service_id}}" {{#selected service_id ../trip.service_id}}{{/selected}}>{{service_name}}</option>
              {{/each}}
            </select>
        </div>
        <div class="form-group">
          <label for="trip_headsign">trip_headsign</label>
            <input class="form-control" type="text" name="trip_headsign" placeholder="trip_headsign" value="{{trip.trip_headsign}}">
        </div>
        <div class="form-group">
          <label for="direction_id" class="control-label">Direction</label>
            <select class="form-control select-direction" id="direction_id">
              <option value=""> -- </option>
              <option value="0" {{#if_eq trip.direction_id "0"}}selected="selected"{{/if_eq}}>Outwards</option>
              <option value="1" {{#if_eq trip.direction_id "1"}}selected="selected"{{/if_eq}}>Inwards</option>
            </select>
        </div>
        <div class="form-group">
            <label>
              <input type="checkbox" {{#if trip.active}}checked{{/if}}> Active
            </label>
        </div>
      </form>
    </div>

    <div class="modal-footer">
      <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      <button type="button" class="btn btn-primary js-save">Save changes</button>
    </div>
  </div>
</div>
