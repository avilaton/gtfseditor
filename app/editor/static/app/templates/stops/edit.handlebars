<div class="col-md-12">

  <ol class="breadcrumb">
    <li><a href="#">Home</a></li>
    <li class="active">Stops</li>
  </ol>

  <div class="page-header">
    {{#if stop.stop_id}}
      <h1>Edit Stop <small>{{stop.stop_code}}</small></h1>
    {{else}}
      <h1>New Stop</h1>
    {{/if}}
  </div>
  <div class="row">
    <div class="col-md-8">
      <div id="map" class="map-view"></div>
    </div>
    <div class="col-md-4">

      <div class="well">
        <form role="form" >
          <div class="form-group">
            <label for="stop_code">Code</label>
            <input class="form-control" type="text" name="stop_code" placeholder="stop_code" value="{{stop.stop_code}}">
          </div>
          <div class="form-group">
            <label for="stop_name">Name</label>
            <input class="form-control" type="text" name="stop_name" placeholder="stop_name" value="{{stop.stop_name}}">
          </div>
          <div class="form-group">
            <label for="stop_calle">Calle</label>
              <input class="form-control" type="text" name="stop_calle" placeholder="stop_calle" value="{{stop.stop_calle}}">
          </div>
          <div class="form-group">
            <label for="stop_numero">Numero</label>
              <input class="form-control" type="text" name="stop_numero" placeholder="stop_numero" value="{{stop.stop_numero}}">
          </div>
          <div class="form-group">
            <label for="stop_esquina">Esquina</label>
              <input class="form-control" type="text" name="stop_esquina" placeholder="stop_esquina" value="{{stop.stop_esquina}}">
          </div>
          <div class="form-group">
            <label for="stop_entre">Entre</label>
              <input class="form-control" type="text" name="stop_entre" placeholder="stop_entre" value="{{stop.stop_entre}}">
          </div>
          <div class="form-group">
            <label for="stop_desc">Description</label>
            <input class="form-control" type="text" name="stop_desc" placeholder="stop_desc" value="{{stop.stop_desc}}">
          </div>
        </form>        
      </div>

      <div class="btn-toolbar" role="toolbar">
        <div class="btn-group btn-group-md">
          <button class="btn btn-default rm-stop"><i class="glyphicon glyphicon-trash"></i> Delete</button>
        </div>
        <div class="btn-group btn-group-md pull-right">
          <button class="btn btn-primary save-stop"><i class="glyphicon glyphicon-save"></i> Save</button>
          <a href="#/stops" class="btn btn-default cancel-edit"><i class="glyphicon glyphicon-remove"></i> Cancel</a>
        </div>
      </div>

    </div>
  </div>
</div>
