<div class="row voffset1">
  <div class="col-md-12">
	<table class="table table-hover table-condensed">
	<thead>
		<tr>
			<th>N</th><th>Stop Code</th><th>Time</th><th>Distance (km)</th><th>Speed (km/h)</th>
			<th> <span class="glyphicon glyphicon-cog"></span>	</th>
		</tr>
	</thead>
	<tbody>
		{{#each this}}
		<tr data-stop-id="{{stop_id}}">
			<td>{{stop_sequence}}</td>
			<td>{{_stop.stop_code}}</td>
			<td class="stop-time" contenteditable="true">{{stop_time}}</td>
			<td>{{shape_dist_traveled}}</td>
			<td>{{speed}}</td>
			<td>
				<a href="#" class="remove-stop-time">
					<span class="glyphicon glyphicon-trash"></span>
				</a> 
			</td>
		</tr>
		{{/each}}
	</tbody>
	</table>
  </div>
</div>